    broom,
    dplyr,
    forcats (>= 1.0.0),
    ggplot2 (>= 3.4.0),
    gridExtra,
    magrittr,
    MASS,
    palmerpenguins,
    randomForest,
    rlang (>= 1.1.0),
    rmarkdown,
    rpart,
    rpart.plot,
    stats,
    stringr,
    tibble,
    tidyr
RoxygenNote: 7.2.3
Roxygen: list(markdown = TRUE)
Suggests: 
    DT (>= 0.3.0),
    knitr,
